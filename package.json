{
  "name": "transcriptorAI",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=@transcriptorai/web --filter=@transcriptorai/worker",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:contract": "vitest run tests/contract",
    "test:integration": "vitest run tests/integration",
    "e2e": "playwright test",
    "perf": "bash scripts/run-perf.sh",
    "lhci": "lhci autorun",
    "scan:bundle": "node scripts/scan-bundle.js",
    "scan:licenses": "license-checker --summary",
    "scan:secrets": "gitleaks detect --no-git -v",
    "preflight": "node scripts/preflight-env.js",
    "qa:provider": "node scripts/provider-cascade-test.js --scenario=primary",
    "qa:cache": "node scripts/cache-perf-test.js",
    "qa:concurrency": "node scripts/concurrency-test.js",
    "qa:network": "node scripts/network-resilience-test.js",
    "qa:metrics": "node scripts/evaluate-accuracy.mjs",
    "qa:all": "pnpm preflight && pnpm -w build && pnpm test && pnpm test:contract && pnpm test:integration && pnpm e2e && pnpm perf && pnpm qa:provider && pnpm qa:cache && pnpm qa:concurrency && pnpm qa:network && pnpm qa:metrics && pnpm lhci && pnpm scan:bundle",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@lhci/cli": "^0.14.0",
    "@next/eslint-plugin-next": "^15.5.3",
    "@playwright/test": "^1.49.1",
    "@types/node": "^24.3.1",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "artillery": "^2.0.0",
    "commitlint": "^19.5.0",
    "eslint": "^9.35.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "k6": "^0.0.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.2.0",
    "miniflare": "^4.20250906.0",
    "msw": "^2.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "supertest": "^6.3.4",
    "turbo": "^2.1.3",
    "typescript": "^5.9.2",
    "vitest": "^2.1.4",
    "wrangler": "^4.36.0"
  },
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
