{
  "name": "transcriptorAI",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=@transcriptorai/web --filter=@transcriptorai/worker",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:contract": "vitest run tests/contract",
    "test:integration": "vitest run tests/integration",
    "e2e": "playwright test",
    "perf": "bash scripts/run-perf.sh",
    "lhci": "lhci autorun",
    "scan:bundle": "node scripts/scan-bundle.js",
    "scan:licenses": "license-checker --summary && license-checker --production --failOn 'GPL;AGPL;LGPL;SSPL'",
    "scan:secrets": "gitleaks detect --no-git -v",
    "preflight": "node scripts/preflight-env.js",
    "qa:provider": "node scripts/provider-cascade-test.js --scenario=primary",
    "qa:cache": "node scripts/cache-perf-test.js",
    "qa:concurrency": "node scripts/concurrency-test.js",
    "qa:network": "node scripts/network-resilience-test.js",
    "qa:metrics": "node scripts/evaluate-accuracy.mjs",
    "qa:all": "pnpm preflight && pnpm -w build && pnpm test && pnpm test:contract && pnpm test:integration && pnpm e2e && pnpm perf && pnpm qa:provider && pnpm qa:cache && pnpm qa:concurrency && pnpm qa:network && pnpm qa:metrics && pnpm lhci && pnpm scan:bundle",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@lhci/cli": "^0.15.1",
    "@next/eslint-plugin-next": "^16.0.3",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "artillery": "^2.0.27",
    "commitlint": "^20.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "k6": "^0.0.0",
    "license-checker": "^25.0.1",
    "licenseguard-cli": "^2.0.0",
    "lint-staged": "^16.2.6",
    "miniflare": "^4.20251113.0",
    "msw": "^2.12.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "supertest": "^7.1.4",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10",
    "wrangler": "^4.49.0"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
