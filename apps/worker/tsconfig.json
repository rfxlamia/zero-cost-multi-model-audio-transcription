{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022",
      "WebWorker"
    ],
    "types": [
      "@cloudflare/workers-types"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@transcriptorai/shared/*": [
        "../../packages/shared/*"
      ],
      "@transcriptorai/shared": [
        "../../packages/shared"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
