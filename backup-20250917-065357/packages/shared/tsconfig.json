{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "composite": true,
    "noEmit": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["types/**/*", "utils/**/*", "constants/**/*"],
  "exclude": ["node_modules", "dist"]
}
