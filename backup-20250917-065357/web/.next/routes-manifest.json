{
  "version": 3,
  "caseSensitive": false,
  "basePath": "",
  "rewrites": {
    "beforeFiles": [],
    "afterFiles": [
      {
        "source": "/api/:path*",
        "destination": "http://localhost:8787/api/:path*",
        "regex": "^\\/api(?:\\/((?:[^\\/]+?)(?:\\/(?:[^\\/]+?))*))?(?:\\/)?$",
        "check": true
      }
    ],
    "fallback": []
  },
  "redirects": [
    {
      "source": "/:path+/",
      "destination": "/:path+",
      "permanent": true,
      "internal": true,
      "regex": "^(?:\\/((?:[^\\/]+?)(?:\\/(?:[^\\/]+?))*))\\/$"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob:; media-src 'self' blob:; connect-src 'self' http://localhost:8787 https://*.workers.dev; worker-src 'self' blob:"
        }
      ],
      "regex": "^(?:\\/(.*))(?:\\/)?$"
    }
  ]
}
