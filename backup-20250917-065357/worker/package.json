{
  "name": "@transcriptorai/worker",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev src/index.ts",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "lint": "eslint --ext .ts src/",
    "format": "prettier --write src/",
    "test:stable": "vitest run --pool=threads --poolOptions.threads.maxThreads=1 --poolOptions.threads.minThreads=1"
  },
  "dependencies": {
    "hono": "^4.9.7",
    "@transcriptorai/shared": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241018.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "miniflare": "^3.20241018.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "wrangler": "^4.36.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  }
}
